<div class="row">
  <div class="col-auto">
    <h2>All Posts</h2>
  </div>
</div>

<div id="comments">
{{#each comments as | comment| }}
   <p>{{this.title}}:{{this.comment}} <button data-id="{{id}}">delete</button></p>
  {{/each}}
</div>

<script src="/js/comments.js"></script>



<div class="row mt-4">
  <div class="col-md-6">
    <h3>Add a new comment:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-name">Title:</label>
        <input class="form-input" type="text" id="project-name" name="project-name" />
      </div>
   
      <div class="form-group">
        <label for="project-desc">Comment:</label>
        <textarea class="form-input" id="project-desc" name="project-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Post</button>
      </div>
    </form>
  </div>

<script src="./js/profile.js"></script>