<div class="row">
  <div class="col-auto">
    <h1>All Posts</h1>
  </div>
</div>


<div id="commentBoxes">
  {{#each comments as | comment| }}
  <div id = "titleBox">
   <h3>{{comment.title}}</h3>
    <p>
    Posted by {{user.name}} on {{comment.date_created}} 
    </p>
  </div>
  <div id = "descBox">
  <p> {{comment.comment}} </p>
  <button id = "delBtn" data-id="{{id}}">delete</button>
  </div>


  {{/each}}

</div>




<script src="/js/comments.js"></script>
